{
  "name": "statconverter",
  "version": "1.2.1",
  "description": "Statistical package converter using the DDI standard interface",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && cross-env NODE_ENV=development electron ./dist/main.js",
    "predist": "cross-env NODE_ENV=production node scripts/check-env.js",
    "dist": "npm run build && electron-builder --publish never",
    "dist:publish": "npm run build && electron-builder --publish onTagOrDraft",
    "rename:linux": "bash scripts/rename-binaries-linux.sh",
    "rename:mac": "bash scripts/rename-binaries-mac.sh",
    "rename:win": "powershell -ExecutionPolicy Bypass -File scripts/rename-binaries-windows.ps1",
    "dist:linux": "npm run predist && npm run build && node scripts/build-linux.js && npm run rename:linux",
    "dist:mac": "npm run dist && npm run rename:mac",
    "dist:win": "npm run dist && npm run rename:win"
  },
  "author": "RODA",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/RODA/StatConverter/issues"
  },
  "homepage": "https://github.com/RODA/StatConverter#readme",
  "build": {
    "appId": "StatConverter.tool",
    "productName": "StatConverter",
    "directories": {
      "output": "build/output"
    },
    "win": {
      "icon": "build/StatConverter.ico",
      "legalTrademarks": "MIT Licence",
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "icon": "build/StatConverter.icns"
    },
    "publish": {
      "provider": "github",
      "owner": "RODA",
      "repo": "StatConverter"
    }
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/emscripten": "^1.41.5",
    "@types/lodash": "^4.17.20",
    "@types/pako": "^2.0.4",
    "@types/serviceworker": "^0.0.165",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "cross-env": "^10.1.0",
    "electron": "^39.1.0",
    "electron-builder": "^26.1.0",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "bootstrap": "^5.3.8",
    "electron-updater": "^6.7.0",
    "lodash": "^4.17.21",
    "pako": "^2.1.0",
    "tippy.js": "^6.3.7",
    "uuid": "^13.0.0",
    "webr": "^0.5.6",
    "ws": "^8.18.3"
  },
  "postinstall": "electron-builder install-app-deps"
}
