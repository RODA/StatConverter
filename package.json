{
	"name": "statconverter",
	"version": "1.0.0",
	"description": "Convert statistical data using R",
	"main": "./dist/main.js",
	"scripts": {
		"build": "tsc",
		"watch": "tsc -w",
		"lint": "eslint -c .eslintrc.json --ext .ts ./src",
		"start": "npm run build && electron ./dist/main.js",
		"dist": "npm run build && electron-builder",
		"pack": "npm run build && electron-builder --dir"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/RODA/StatConverter.git"
	},
	"keywords": [
		"convert",
		"SAS",
		"SPSS",
		"Stata",
		"R"
	],
	"author": "RODA",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/RODA/StatConverter/issues"
	},
	"homepage": "https://github.com/RODA/StatConverter#readme",
	"dependencies": {
		"@popperjs/core": "^2.9.3",
		"@types/ws": "^7.4.7",
		"bootstrap": "^5.1.0",
		"lodash.clonedeep": "^4.5.0",
		"node-pty": "^0.10.1",
		"ws": "^8.2.0"
	},
	"devDependencies": {
		"@types/lodash.clonedeep": "^4.5.6",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
		"electron": "^12.0.7",
		"electron-builder": "^22.14.5",
		"electron-rebuild": "^3.2.5",
		"eslint": "^7.26.0",
		"typescript": "^4.2.4"
	},
	"build": {
		"appId": "StatConverter.tool",
		"productName": "StatConverter",
		"directories": {
			"output": "build/output"
		},
		"extraResources": [
			{
				"from": "src/startServer.R",
				"to": "startServer.R"
			},
			{
				"from": "src/assets",
				"to": "assets"
			}
		],
		"win": {
			"icon": "build/icon.ico",
			"legalTrademarks": "MIT Licence",
			"target": {
				"target": "dir"
			}
		},
		"mac": {
			"target": "dir"
		}
	}
}
