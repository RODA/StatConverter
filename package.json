{
    "name": "statconverter",
    "version": "1.0.9",
    "description": "Convert statistical data using R",
    "main": "dist/main.js",
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "lint": "eslint -c .eslintrc --ext .ts ./src",
        "start": "npm run build && electron ./dist/main.js",
        "dist": "npm run build && electron-builder",
        "pack": "npm run build && electron-builder --dir"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/RODA/StatConverter.git"
    },
    "keywords": [
        "convert",
        "SAS",
        "SPSS",
        "Stata",
        "R",
        "Excel",
        "DDI"
    ],
    "author": "RODA",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/RODA/StatConverter/issues"
    },
    "homepage": "https://github.com/RODA/StatConverter#readme",
    "dependencies": {
        "@popperjs/core": "^2.11.5",
        "@types/ws": "^7.4.7",
        "bootstrap": "^5.1.0",
        "electron-squirrel-startup": "^1.0.0",
        "lodash.clonedeep": "^4.5.0",
        "r-integration": "^2.3.0",
        "trim-newlines": ">=3.0.1",
        "ws": "^8.8.0"
    },
    "devDependencies": {
        "@types/lodash.clonedeep": "^4.5.7",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "electron": "^18.3.5",
        "electron-builder": "^23.1.0",
        "electron-rebuild": "^3.2.8",
        "eslint": "^7.26.0",
        "typescript": "^4.7.4"
    },
    "build": {
        "appId": "StatConverter.tool",
        "productName": "StatConverter",
        "directories": {
            "output": "build/output"
        },
        "extraResources": [
            {
                "from": "R_Portable",
                "to": "R_Portable"
            },
            {
                "from": "src/startServer.R",
                "to": "startServer.R"
            }
        ],
        "win": {
            "icon": "build/StatConverter.ico",
            "legalTrademarks": "MIT Licence",
            "target": {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }
        },
        "mac": {
            "category": "public.app-category.productivity",
            "target": {
                "target": "dmg",
                "arch": [
                    "x64"
                ]
            },
            "icon": "build/StatConverter.icns"
        }
    }
}
